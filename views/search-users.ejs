<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs")  %>
</head>
<header>
    <% if (locals.user != null) { %> <!--evalua si el usuario esta logueado-->
		<%- include('./partials/headerLogueado') %>
	  <% } else { %>
		<%- include('./partials/header') %>
	  <% } %>
</header>
<body>
    <div>
    <% if (data.length === 0) { %>
            <h2>No hay resultados para su criterio de b√∫squeda</h2>
        <% } else { %>
            <% for (let i = 0; i < data.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <figure class="product-box_image">
                            <div class="img-container offset-3 col-2">
                                <img src="<%= data.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
                            </div>
                        </figure>
                        <article class="product-box_data">
                            <a href="/users/profile/<%= data[i].id %>"> <%= data[i].dataValues.email%></a>
                        </article>
                        </a>
                    </section>
                </div>
            </div>
            <% } %>
        <% } %>
    </div>
</body>
</html>