<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs")  %>

<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado.ejs")  %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	
	<% for(let i = 0; i < 1; i++) { %>
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src= <%= usersList[i].fotoPerfil %> alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"><%= usersList[i].usuario %>
							<a href="/users/profile/profile-edit">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<h3><%= usersList[i].email %></h3>
					</div>
					<div>
						<ul class="">
							<li>8 productos</li>
							<li>200 seguidores</li>
							<li>300 comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	<% } %>	
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="row">
				<% for(let i = 0; i < newProducts.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products">
								<figure class="product-box_image">
									<img src=<%= "/images/products/" + newProducts[i].imagen %> alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2><%= newProducts[i].nombreProducto %></h2> 
									<p><%= newProducts[i].descripcion %></p>
									<p>Fecha de carga: <%= newProducts[i].fechaCarga %></p>
									<p>Comentarios: <%= newProducts[i].comentarios  %></p> 
								</article>
							</a>
						</section>
					</div>
				<% } %>	
			</div>
		</div>
	</div>		
	<!-- /Mis productos -->
	
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>