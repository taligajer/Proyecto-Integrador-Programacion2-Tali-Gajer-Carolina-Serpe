<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('./partials/head') %>
</head>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/bannermuebles.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < newProducts.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= newProducts[i].id %>">
							<figure class="product-box_image">
								<img src=<%= "/images/products/" + newProducts[i].imagen %> alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= newProducts[i].nombreProducto %></h2>
								<p>Cargado por: <%= newProducts[i].email%></p>
								<p><%= newProducts[i].descripcion %></p>
								<p>Fecha de carga: <%= newProducts[i].fechaCarga %></p>
								<p>Comentarios: <%= newProducts[i].comentarios  %></p> 
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>

			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < mostCommentedProducts.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src=<%= "/images/products/" + mostCommentedProducts[i].imagen %> alt=<%= mostCommentedProducts[i].alt %>>
							</figure>
							<article class="product-box_data">
								<h2><%= mostCommentedProducts[i].nombreProducto %></h2> 
								<p><%= mostCommentedProducts[i].descripcion %></p>
								<p>Fecha de carga: <%= mostCommentedProducts[i].fechaCarga %></p>
								<p>Comentarios: <%= mostCommentedProducts[i].comentarios  %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Más comentados -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>