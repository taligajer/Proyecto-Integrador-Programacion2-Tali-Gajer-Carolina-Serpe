<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<%- include('./partials/header.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for(let i = 0; i < 3 ; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products">
									<figure class="product-box_image">
										<img src=<%= "/images/products/" + newProducts[i].imagen %> alt="cafetera moulinex">
									</figure>
									<article class="product-box_data">
										<h2><%= newProducts[i].nombreProducto %></h2> 
										<p><%= newProducts[i].descripcion %></p>
										<p>Fecha de carga: <%= newProducts[i].fechaCarga %></p>
										<p>Comentarios: <%= newProducts[i].comentarios  %></p> 
									</article>
								</a>
							</section>
						</div>
					<% } %>
				</div>
			</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>