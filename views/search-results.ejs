<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<% if (locals.user != null) { %>
		<%- include('./partials/headerLogueado') %>
	  <% } else { %>
		<%- include('./partials/header') %>
	  <% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% if (data.length === 0) { %>
						<h2>No hay resultados para su criterio de búsqueda</h2>
					<% } else { %>
						<% for (let i = 0; i < data.length; i++) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/<%= data[i].id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= data[i].nombreProducto %>.jpeg" alt="<%= data[i].nombreProducto %>">
										</figure>
										<article class="product-box_data">
											<h2><%= data[i].nombreProducto %></h2>
											<p><%= data[i].descripcion %></p>
											<a href="/users/profile/<%= data[i].userId %>">Cargado por: <%= data[i].usuarios.email //definir ruta%></a>
											<p>Fecha de carga: <%= data[i].createdAt %></p>
											<p>Comentarios: <%= data[i].comentario.length  %></p>
										</article>
									</a>
								</section>
							</div>
						<% } %>
					<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>